    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.5",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "27.1.1",
    "ts-node": "^10.8.2",
    "typescript": "4.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "nodemon": "nodemon --enable-source-maps ./dist/index.js --watch ./dist --watch package.json --watch ./src/views --ext js,html",
    "compile": "tsc && mkdir -p cache",
    "format": "prettier --config .prettierrc '{src,tests,resources}/**/*.{ts,js}' --write",
    "verify": "npm run lint",
    "lint": "npx eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "update": "git pull && npm install . && pm2 restart 0",
    "watch": "tsc -w",
    "test": "jest"
  }
}
