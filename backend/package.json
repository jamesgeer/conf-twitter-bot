{
  "name": "conf-twitter-bot-server",
  "version": "0.0.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "description": "CS Conference Twitter Bot Server",
  "author": "Stefan Marr <git@stefan-marr.de>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@koa/router": "^11.0.1",
    "@prisma/client": "^4.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/koa-send": "^4.1.3",
    "@types/koa-static": "^4.0.2",
    "@types/supertest": "^2.0.12",
    "@types/user-agents": "^1.0.2",
    "app-root-path": "^3.1.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "html-minifier-terser": "^7.0.0-beta.0",
    "http-status": "^1.5.2",
    "jsdom": "^20.0.0",
    "koa": "2.13.4",
    "koa-body": "4.2.0",
    "koa-send": "^5.0.1",
    "koa-session": "6.2.0",
    "koa-static": "^5.0.0",
    "looks-same": "^8.1.0",
    "node-cron": "^3.0.1",
    "pino-pretty": "^9.1.1",
    "playwright-chromium": "^1.30.0",
    "twitter-api-v2": "1.8.0",
    "user-agents": "^1.0.1100"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "27.0.3",
    "@types/jsdom": "16.2.13",
    "@types/koa": "2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-session": "^5.10.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "cross-env": "^7.0.3",
    "jest": "^27.5.1",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.15",
    "prisma": "^4.9.0",
    "supertest": "^6.3.0",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.1",
    "typescript": "4.5.4"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globalSetup": "./jest/global-setup.ts",
    "globalTeardown": "./jest/global-teardown.ts",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "maxWorkers": 1,
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "scripts": {
    "start": "cd src && nodemon server.ts",
    "build": "npx tsc",
    "github-actions-test": "npx prisma migrate deploy && jest --forceExit --detectOpenHandles",
    "docker-test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker-test:down": "docker-compose -f docker-compose.test.yml down",
    "test:env": "cross-env TEST=true DATABASE_URL=postgresql://prisma:prisma@localhost:5433/tests",
    "test": "npm run docker-test:up && npm run test:env npx prisma migrate deploy && npm run test:env jest -i && npm run docker-test:down"
  },
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "keywords": []
}
